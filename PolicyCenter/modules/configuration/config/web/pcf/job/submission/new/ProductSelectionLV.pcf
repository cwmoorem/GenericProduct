<?xml version="1.0"?>
<PCF
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="../../../../../../../pcf.xsd">
  <ListViewPanel
    id="ProductSelectionLV">
    <Require
      name="productOffers"
      type="ProductSelection[]"/>
    <Require
      name="account"
      type="Account"/>
    <Require
      name="producerSelection"
      type="ProducerSelection"/>
    <Require
      name="createSingle"
      type="boolean"/>
    <Require
      name="quoteType"
      type="QuoteType"/>
    <Variable
      initialValue="false"
      name="createMultiple"
      type="boolean"/>
    <Variable
      initialValue="new acc.pc.lob.common.pageprocess.ProductSelectionLv()"
      name="pageProcess"/>
    <RowIterator
      editable="true"
      elementName="productOffer"
      value="pageProcess.availableProductOffers(productOffers)">
      <IteratorSort
        sortBy="productOffer.order"
        sortOrder="1"/>
      <Row>
        <LinkCell
          align="center"
          id="Select"
          visible="createSingle"
          width="75">
          <Link
            action="gw.web.job.submission.NewSubmissionUIHelper.createOneSubmission(productOffer, producerSelection, account, quoteType)"
            id="addSubmission"
            label="displaykey.Web.Submission.Products.Select"
            styleClass="miniButton"
            visible="productOffer.productSelection.ProductSelectionStatus == &quot;Available&quot; || productOffer.productSelection.ProductSelectionStatus == &quot;AutoDeclined&quot;"/>
        </LinkCell>
        <RangeCell
          align="left"
          desc="f"
          editable="true"
          id="NumToCreate"
          label="displaykey.Web.Submission.Products.NumberToCreate"
          value="productOffer.productSelection.NumToCreate"
          valueRange="gw.web.job.submission.NewSubmissionUIHelper.makeNumberRange(productOffer.productSelection.MaxCreate)"
          valueVisible="productOffer.productSelection.ProductSelectionStatus == &quot;Available&quot; || productOffer.productSelection.ProductSelectionStatus == &quot;AutoDeclined&quot;"
          visible="!createSingle"/>
        <Cell
          align="left"
          id="Name"
          label="displaykey.Web.SubmissionManagerLV.Name"
          value="productOffer.ProductName"/>
        <Cell
          align="left"
          id="Description"
          label="displaykey.Web.SubmissionManagerLV.Description"
          value="productOffer.productSelection.Product.Description"/>
        <Cell
          align="left"
          id="Status"
          label="displaykey.Web.SubmissionManagerLV.Status"
          value="productOffer.productSelection.ProductSelectionStatus"/>
        <Cell
          align="left"
          id="MaxCreate"
          label="displaykey.Web.Submission.Products.MaxToCreate"
          value="productOffer.productSelection.MaxCreate"
          visible="!createSingle"/>
      </Row>
    </RowIterator>
  </ListViewPanel>
</PCF>